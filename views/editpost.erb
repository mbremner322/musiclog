<div class="container">        <!-- 全体を囲むコンテナ -->

<h1 class="page-header">Edit Post</h1>
<div class="well">
    <form action="/updatePost/<%=@post.id%>" method="post">
        <div class="form-group">
            <label for="songTitle">Song Title</label>
            <input type="text" class="form-control" id="songTitle" name="songTitle" value=<%=@post.songTitle%>>
        </div>
        <div class="form-group">
            <label for="link">YouTube Link</label>
            <input type="text" class="form-control" id="link"name="link" value=<%=@post.link%>>
        </div>
        <button id="linkValidity" type="button">Check link validity</button>
        <div class="form-group" id="artist" style="display: none">
            <label for="artist">Artist Name</label>
            <input type="text"  class="form-control" id="artist" name="artist" value=<%=@post.artistName%>>
        </div>
        <div class="form-group" id="body" style="display: none">
            <label for="body">Body</label>
            <textarea rows="10" style="resize: none" name="body" class="form-control" id="body" value=<%=@post.body%>></textarea>
        </div>
        <button style='display:none' class="btn btn-success btn-lg active"id='button'>submit</button>
        <button type='button' style='display:none' class="btn btn-success btn-lg active"id='button1'onClick='window.location.reload()'>clear</button>
    </form>
</div>
